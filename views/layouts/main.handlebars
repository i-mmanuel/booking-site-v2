  <script>
    var toReserve = {}

    // Click to navigate
    if (document.querySelector('#success-popup-message')) {
      document.querySelector("#success-popup-message").addEventListener('click', (e) => {

        e.preventDefault();

        document.querySelector("a[href='#contact-section']").click();

        document.querySelector("input[name='room_typee']").value = toReserve.room_type
        document.querySelector("input[name='checkinn_date']").value = toReserve.checkin_date
        document.querySelector("input[name='checkoutt_date']").value = toReserve.checkout_date

      });
    }

    // Contact form handling for booking
    $(".contact-form").on("submit", function (e) {
      e.preventDefault();

      var dataString = { ...toReserve };

      dataString.first_name = document.querySelector("input[name='first_name']").value
      dataString.last_name = document.querySelector("input[name='last_name']").value
      dataString.phone = document.querySelector("input[type='phone']").value
      dataString.email = document.querySelector("input[type='email']").value
      // alert(dataString); return false;

      $.ajax({
        type: "POST",
        url: "/room-booking",
        data: dataString,
        success: function (data) {
          $('#message-area').html(`<div class="alert alert-success mt-3" role="alert">${data.bookingMessage}</div>`)
            .hide()
            .fadeIn(500);
          console.log(data);
        },
        error: function (error) {
          $('#message-area').html(`<div class="alert alert-danger mt-3" role="alert">${error.responseJSON.bookingError}</div>`)
            .hide()
            .fadeIn(500);
          console.log(error.responseJSON.bookingError);
        }
      });
    });

    $(".search-property-1").on("submit", function (e) {
      e.preventDefault();

      var dataString = {};

      dataString.room_type = document.querySelector("select[name='room_type']").value;
      dataString.checkin_date = document.querySelector("input[name='checkin_date']").value;
      dataString.checkout_date = document.querySelector("input[name='checkout_date']").value;
      dataString.adult_number = document.querySelector("input[name='adult_number']").value;

      // alert(dataString); return false;

      $.ajax({
        type: "POST",
        url: "/room-availability",
        data: dataString,
        success: function (data) {
          toReserve = { ...dataString };

          document.querySelector('#message-head').innerText = `${data.message}`;

          $('#message-area1').fadeIn(500);
        },
        error: function (error) {
          $('#message-area1').html(`<div class="alert alert-danger mt-2" role="alert">${error.responseJSON.error}</div>`)
            .hide()
            .fadeIn(500);
          console.log(error.responseJSON.error);
        }
      });
    });


